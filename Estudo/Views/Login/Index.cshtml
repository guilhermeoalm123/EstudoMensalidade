<link href="~/css/login.css" rel="stylesheet" />

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <img src="./img/AdminLTELogo.png" id="icon" alt="User Icon" />
        </div>

        <!-- Login Form -->
        <form asp-controller="Login" asp-action="index">
            <input asp-for="Email" type="text" class="fadeIn second" placeholder="login">
            <input asp-for="Senha" type="password" class="fadeIn third" placeholder="password">
            <br />
            <span style="color:red;">@ViewData["Erro"]</span>
            <br />
            <input type="submit" class="fadeIn fourth" value="Log In">
        </form>
        
        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" href="#">Esqueceu a senha?</a>
        </div>

    </div>
</div>
