@model Estudo.Models.PagamentoViewModel
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@using NonFactors.Mvc.Grid;
@{
	ViewData["Title"] = "Cadastro de Pessoas";
	Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
	var disabled = (Model.Codigo == null) ? "disabled" : string.Empty;
}

<h4>Pagamento</h4>
<hr />

<div class="container">
	<div class="col-2"></div>
	<div class="col-8">
		<form id="Pagamento" method="post" action="Cadastrar" class="row g-3">

			<div class="col-md2">
				<div class="form-group">
					<label>Código:</label>
					<input type="text" asp-for="Codigo" disabled class="form-control" />
					<input type="hidden" asp-for="Codigo" class="form-control" />
				</div>
			</div>

			<div class="col-md-10"></div>

			<div class="col-md-6">
				<div class="form-group">
					<label>Nome:</label>
					<select asp-for="PessoasCodigo" value="@Model.PessoasCodigo" class="form-control" asp-items="@Model.ListaPessoa"></select>
				</div>
			</div>

			<div class="col-md-6">
				<div class="form-group">
					<label>Mensalidade:</label>
					<select asp-for="MensalidadeCodigo" value="@Model.MensalidadeCodigo" class="form-control" asp-items="@Model.ListaMensalidade"></select>
				</div>
			</div>


			<hr />

			<div class="container text-right ">
				<input type="submit" value="Salvar" class="btn btn-outline-secondary" />
				<input type="button" value="Excluir" class="btn btn-outline-secondary" onclick="Excluir(@Model.Codigo)" @disabled />
				<input type="button" value="Voltar" class="btn btn-outline-secondary" onclick="Voltar()" />
			</div>

		</form>
	</div>
	<div class="col-2"></div>
</div>

<script>
	function Excluir(Codigo) {
		window.location = window.origin + "\\Pagamento\\Excluir\\" + Codigo;
	}

	function Voltar() {
		window.location = window.origin + "\\Pagamento";
	}
</script>
